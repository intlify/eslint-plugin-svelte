{
  "compilerOptions": {
    "target": "es2015",
    "module": "node16",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false
  },
  "include": ["lib", "tests/lib/**/*", "scripts/**/*", "typings/**/*"]
}
