{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["lib", "tests/lib/**/*", "scripts/**/*", "typings/**/*"]
}
